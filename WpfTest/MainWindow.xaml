<Window x:Class="WpfTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfTest"
        mc:Ignorable="d"
        Title="To ten wpf fajn jest" Height="300" Width="600">
    <Grid>
        <TextBlock x:Name="HelloWpf"  HorizontalAlignment="Center"
                    TextWrapping="Wrap"  
                    VerticalAlignment="Center" Height="25" Width="140"
                    Background="#FF45E200" FontFamily="Castellar" 
                    FontSize="22" Cursor="Wait" RenderTransformOrigin="0.5,0.5">
            <TextBlock.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="330"/>
                </TransformGroup>
            </TextBlock.RenderTransform>
            Hello WPF
        </TextBlock>

    </Grid>
</Window>
